<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgLivroCapa"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/pequeno_principe" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="5dp">


                <TextView
                    android:id="@+id/txtLivroTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="O Pequeno principe"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtLivroDescricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pequeno_principe" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ler"
                        android:id="@+id/btnler"/>
                    <Button
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lidos"
                        android:id="@+id/btnlidos"/>
                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/imgapagarLivro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lixeira" />

            <ImageView
                android:id="@+id/imgeditarLivro"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/editar" />



        </LinearLayout>


</LinearLayout>